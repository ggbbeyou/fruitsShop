  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  font-size: 14px;
  box-sizing: border-box;
  line-height: 60rpx;
}
.zzx-tabs .zzx-tabs-wrap .zzx-tab {
  box-sizing: border-box;
  text-align: center;
  color: #999999;
}
.zzx-tabs .zzx-tabs-wrap .item-title {
  position: relative;
}
.zzx-tabs .zzx-tabs-wrap .dot-show:after {
